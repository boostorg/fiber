import testing ;

project boost/fiber/test
    : requirements
      <library>../../test/build//boost_unit_test_framework
      <library>/boost/fiber//boost_fibers
      <library>/boost/thread//boost_thread
      <link>static
      <threading>multi
    ;

rule fiber-test ( source )
{
    return
        [ run $(source).cpp ]
    ;
}

test-suite fibers :
